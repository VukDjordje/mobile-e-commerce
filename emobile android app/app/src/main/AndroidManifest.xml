<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rs.fon.emobill">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home.HomeActivity" android:theme="@style/AppThemeWithActionBar"/>

        <activity android:name=".login.SignInActivity"/>

        <activity android:name=".login.ForgotPasswordActivity"/>

        <activity android:name=".login.SignUpActivity" />

        <activity android:name=".home.ProductDetailActivity" android:theme="@style/AppThemeWithActionBar"/>

        <activity
            android:name=".home.CategoryProductsActivity"
            android:theme="@style/AppThemeWithActionBar"
            android:label="@string/category_activity_title"/>

        <activity
            android:name=".home.OrderActivity"
            android:theme="@style/AppThemeWithActionBar"/>
        <activity
            android:name=".home.RatingsActivity"
            android:theme="@style/AppThemeWithActionBar"
            android:label="@string/ratings_title"/>

        <activity android:name=".home.SearchResultsActivity"
            android:theme="@style/AppThemeWithActionBar"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity android:name=".home.ChangePasswordActivity" android:theme="@style/AppThemeWithActionBar" android:configChanges="orientation"
            android:screenOrientation="portrait"/>
    </application>

</manifest>