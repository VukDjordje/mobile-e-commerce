<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.fragments.OrdersHistoryFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small_5"
            android:gravity="center"
            android:text="@string/order_history_title"
            android:textSize="@dimen/text_size_extra_large_15"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvOrdersHistory"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="@dimen/padding_small_5"
            android:layout_marginBottom="@dimen/text_size_small_5">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</FrameLayout>