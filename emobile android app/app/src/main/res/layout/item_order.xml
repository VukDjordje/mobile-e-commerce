<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvProduct"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginBottom="@dimen/padding_small_5"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tvProductTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/padding_medim_10"
            android:layout_marginTop="@dimen/padding_small_5"
            android:layout_toEndOf="@+id/ivProductImage"
            android:layout_toRightOf="@+id/ivProductImage"
            android:maxLength="20"
            android:textStyle="bold"
            tools:text="Title"/>

        <TextView
            android:id="@+id/tvOrderInformations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProductTitle"
            android:layout_marginLeft="@dimen/padding_medim_10"
            android:layout_marginTop="@dimen/padding_small_5"
            android:layout_toEndOf="@+id/ivProductImage"
            android:layout_toRightOf="@+id/ivProductImage"
            tools:text="11000 - Beograd, Klinska 17, 0652315862"
            android:maxLength="100"/>

        <TextView
            android:id="@+id/tvProductQuantityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOrderInformations"
            android:layout_marginLeft="@dimen/padding_medim_10"
            android:layout_marginTop="@dimen/padding_medim_10"
            android:layout_toEndOf="@+id/ivProductImage"
            android:layout_toRightOf="@+id/ivProductImage"
            android:text="@string/quantity_label"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvProductQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOrderInformations"
            android:layout_marginLeft="@dimen/padding_medim_10"
            android:layout_marginTop="@dimen/padding_medim_10"
            android:layout_toEndOf="@+id/tvProductQuantityLabel"
            android:layout_toRightOf="@+id/tvProductQuantityLabel"
            tools:text="1"/>

        <ImageView
            android:id="@+id/ivRemoveOrdersHistory"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_remove"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>